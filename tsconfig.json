{
  "version": "3.5.3",
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "esModuleInterop": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "build/",
    "rootDir": "src/",
    "sourceMap": false,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["build", "node_modules", "src/__tests__", "src/__snapshots__"]
}
