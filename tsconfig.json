{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "allowJs": true,
    "module": "CommonJS",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "outDir": "build",
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts"],
  "files": ["src/index.ts"],
  "exclude": ["**/__tests__"]
}
